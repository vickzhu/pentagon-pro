<div id="content">
    <div id="content-header">
      <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 首页</a> <a href="#" class="tip-bottom">资讯</a> <a href="#" class="current">图片</a> </div>
    </div>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
              <h5>添加图片</h5>
            </div>
            <div class="widget-content nopadding">
              <form action="#springUrl('/files/image/add')" id="image_form" method="post" class="form-horizontal" novalidate="novalidate">
				$!{tokenTool.hiddenField}
				<div class="control-group">
                  <label class="control-label">说明:</label>
                  <div class="controls">
					<textarea name="title" class="span6"></textarea>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label">标签:</label>
                  <div class="controls">
                    <input id="title" name="tag" class="span6" type="text" placeholder="Tag" />
                  </div>
                </div>
				<div class="control-group">
                  <label class="control-label">图片:</label>
                  <div class="controls">
					<button id="selFile" type="button" class="btn btn-info">上传图片</button>
					<div id="fileDiv" style="display:none;">
    					<img id="selectedImg" name="selectedImg" style="max-width:200px;display:block;"/>
    					
					</div>
                  </div>
                </div>
                <div class="form-actions">
                  <button type="submit" class="btn btn-success">确定</button>
				  <button type="button" class="btn btn-inverse" onclick="window.location.href='#springUrl('/files/image')'">取消</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<form method="post" enctype="multipart/form-data" style="display:none;">
	<input id="imgFile" type="file" name="imgFile"/>
</form>
<script type="text/javascript">
	$(function(){
		$("#selFile").click(function(){
			$("#imgFile").click();
		});
		
		$("#imgFile").change(function(){
			var fileObj = document.getElementById("imgFile");
			if(fileObj.files && fileObj.files[0]){
				var file = fileObj.files[0];
				$("#fileDiv").show();
				$("#selectedImg").attr("src",window.URL.createObjectURL(file));
			} else {
				$("#fileDiv").show();
				var imgSrc = $("#imgFile").val();
				console.log(imgSrc);
				$("#selectedImg").attr("src",imgSrc);
			}
		});
	});
</script>
<div id="content">
    <div id="content-header">
      <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Form elements</a> <a href="#" class="current">Common elements</a> </div>
    </div>
    <div class="container-fluid">
      <hr>
      <div class="row-fluid">
        <div class="span6">
          <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
              <h5>用户信息</h5>
            </div>
            <div class="widget-content nopadding">
              <form id="role_form" method="post" class="form-horizontal" novalidate="novalidate">
				$!{tokenTool.hiddenField}
				<input type="hidden" name="roleId" value="${role.roleId}" />
                <div class="control-group">
                  <label class="control-label">角色名 :</label>
                  <div class="controls">
                    <input id="roleName" name="roleName" type="text" value="$!{role.roleName}" placeholder="Role name" readonly />
                  </div>
                </div>
				<div class="control-group">
                  <label class="control-label">角色描述:</label>
                  <div class="controls">
					<textarea id="roleDesc" name="roleDesc">$!{role.roleDesc}</textarea>
                  </div>
                </div>
                <div class="control-group">
                  <label class="control-label">是否可用 :</label>
                  <div class="controls">
                    <label>
						<input type="radio" name="enable" value="1" #if($!{role.enable}==1)checked#end />可用
					</label>
					<label>
						<input type="radio" name="enable" value="0" #if($!{role.enable}==0)checked#end/>不可用
					</label>
                  </div>
                </div>
                <div class="form-actions">
                  <button type="submit" class="btn btn-success">保存</button>
				  <button type="button" class="btn btn-inverse" onclick="window.location.href='#springUrl('/system/role')'">返回</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<script src="#resources('js/jquery.validate.js')"></script>
<script src="#resources('layer/layer.js')"></script>
<script type="text/javascript">
	$(function(){
		$("#role_form").validate({
    		errorClass: "help-inline",
    		errorElement: "span",
    		highlight:function(element, errorClass, validClass) {
				$(element).parents('.control-group').removeClass('success');
    			$(element).parents('.control-group').addClass('error');
    		},
    		unhighlight: function(element, errorClass, validClass) {
    			$(element).parents('.control-group').removeClass('error');
    			$(element).parents('.control-group').addClass('success');
    		},
			submitHandler:function(form){
				jQuery.post("#springUrl('/system/role/edit')",$(form).serialize(),function(data){
					var msg = data.success?"更新成功！":"更新失败！";
					var icon = data.success?6:5
					layer.alert(msg, {
                      skin: 'layui-layer-molv',
					  icon: icon,
					  closeBtn: 0
                    }, function(){
						window.location.reload();
                    });
				});
			}
    	});
	})
</script>